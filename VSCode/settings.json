{
  "workbench.activityBar.visible": true,
  "editor.tabSize": 2,
  "editor.tabCompletion": "on",
  "terminal.integrated.defaultProfile.osx": "fish",
  "terminal.integrated.defaultProfile.linux": "fish",
  "terminal.integrated.shellIntegration.enabled": true,
  // "editor.snippetSuggestions": "top",
  // "vim.leader": "<space>",
  "vim.useSystemClipboard": true,
  "extensions.ignoreRecommendations": true,
  "workbench.startupEditor": "newUntitledFile",
  "prettier.printWidth": 120,
  "prettier.singleQuote": true,
  "prettier.trailingComma": "all",
  "prettier.semi": false,
  "editor.fontFamily": "JetBrainsMono Nerd Font, JetBrains Mono, Fira Code, Menlo, Monaco, 'Courier New', monospace",
  "editor.fontLigatures": true,
  "editor.fontSize": 13,
  "terminal.integrated.fontFamily": "FiraCode Nerd Font",
  "terminal.integrated.fontSize": 13,
  "editor.renderControlCharacters": false,
  "workbench.statusBar.visible": true,
  "editor.minimap.enabled": false,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "files.associations": {
    "*.mdx": "markdown",
    ".envrc*": "shellscript"
  },
  "editor.suggestSelection": "first",
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "breadcrumbs.enabled": true,
  "[markdown]": {},
  "[jsonc]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[yaml]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true
  },
  "javascript.updateImportsOnFileMove.enabled": "always",
  "remote.SSH.remotePlatform": {
    "dev": "linux",
    "rpi-eggisried": "linux",
    "rpi2": "linux",
    "hetzner": "linux",
    "chocolate-jaguar-wd9mg2iq": "linux"
  },
  // No longer needed due to https://github.com/microsoft/vscode-remote-release/issues/3190
  // "remote.SSH.defaultForwardedPorts": [
  //   {
  //     "localPort": 3000,
  //     "name": "Vite Web",
  //     "remotePort": 3000
  //   },
  //   {
  //     "localPort": 3001,
  //     "name": "Vite VSC",
  //     "remotePort": 3001
  //   },
  //   {
  //     "localPort": 44000,
  //     "name": "Nexus",
  //     "remotePort": 44000
  //   },
  // ],
  "git.enableSmartCommit": true,
  "debug.onTaskErrors": "debugAnyway",
  "[html]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "git.confirmSync": false,
  "diffEditor.ignoreTrimWhitespace": false,
  "editor.linkedEditing": true,
  "workbench.editor.wrapTabs": true,
  "workbench.iconTheme": "file-icons",
  "window.autoDetectColorScheme": true,
  "workbench.editor.revealIfOpen": false,
  "editor.cursorStyle": "line",
  "editor.insertSpaces": false,
  "editor.lineNumbers": "on",
  "editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-",
  "editor.wordWrap": "off",
  // needed to keep task starting fast (https://github.com/microsoft/vscode/issues/63055#issuecomment-438957634)
  "npm.autoDetect": "off",
  "typescript.tsc.autoDetect": "off",
  "gulp.autoDetect": "off",
  "grunt.autoDetect": "off",
  "jake.autoDetect": "off",
  "taskExplorer.exclude": ["*", "!.vscode/tasks.json"],
  "taskExplorer.enableAnt": false,
  "taskExplorer.enableGradle": false,
  // other
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.organizeImports": false,
    "source.fixAll": true,
    "source.addMissingImports": true
  },
  "terminal.integrated.scrollback": 10000,
  "git.postCommitCommand": "sync",
  "editor.inlineSuggest.enabled": true,
  "git.enableCommitSigning": true,
  "github.copilot.enable": {
    "*": false,
    "yaml": false,
    "plaintext": false,
    "markdown": false,
    "typescript": true,
    "typescriptreact": true,
    "javascript": true,
    "rust": true,
    "json": true,
    "jsonc": true,
    "mdx": false
  },
  // Default launch setup if no `.vscode/launch.json` file is available in project
  "launch": {
    "version": "0.2.0",
    "configurations": [
      // To be used together with `NODE_OPTIONS='--inspect'`
      {
        "type": "node",
        "request": "attach",
        "name": "Attach to Node debugger",
        "skipFiles": ["<node_internals>/**"],
        "port": 9229
      }
    ]
  },
  "git.alwaysShowStagedChangesResourceGroup": true,
  "remote.SSH.useLocalServer": false,
  "nix.serverPath": "/Users/schickling/.nix-profile/bin/rnix-lsp",
  "[javascriptreact]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "redhat.telemetry.enabled": false,
  "editor.bracketPairColorization.enabled": true,
  "typescript.inlayHints.parameterNames.enabled": "literals",
  "iridium.npm.packageManager": "yarn",
  "editor.largeFileOptimizations": false,
  "editor.guides.bracketPairs": "active",
  "typescript.tsserver.log": "off",
  "typescript.referencesCodeLens.enabled": true,
  "nix.formatterPath": "/Users/schickling/.nix-profile/bin/nixpkgs-fmt",
  "nix.enableLanguageServer": true,
  // disable since otherwise VSC can hog CPU
  // See https://github.com/microsoft/vscode-remote-release/issues/3857#issuecomment-750982375
  "remote.SSH.localServerDownload": "off",
  "[rust]": {
    "editor.defaultFormatter": "rust-lang.rust"
  },
  // don't autofetch since it's annoying in combination with Secretive
  "git.autofetch": false,
  // 5 min
  // "git.autofetchPeriod": 300,
  "terminal.integrated.customGlyphs": false,
  "workbench.layoutControl.enabled": true,
  "todo-tree.highlights.enabled": false,
  "todo-tree.general.tags": ["BUG", "HACK", "FIXME", "TODO", "XXX"],
  "gitlens.codeLens.enabled": false,
  "explorer.fileNesting.patterns": {
    "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts, ${capture}.d.ts.map",
    "*.jsx": "${capture}.js",
    "*.tsx": "${capture}.ts",
    "tsconfig.json": "tsconfig.${capture}.json",
    "flake.nix": "flake.lock",
    "README.md": "LICENSE, CONTRIBUTING.md",
    "prettier.config.js": ".prettierignore",
    ".envrc": ".envrc.*",
    "package.json": "package-lock.json, yarn.lock, .yarnrc.yml",
    "*.ts": "${capture}.typegen.ts"
  },
  "explorer.fileNesting.enabled": true,
  "thunder-client.htmlView": "Preview",
  "testing.automaticallyOpenPeekView": "never"
}
